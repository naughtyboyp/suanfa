#include<stdio.h>
int main()
{
    int a[100] = {0};
    int b[100] = {0};
    int c[100] = {0};
    int n = 0;
    int m = 0;
    int i = 0;
    scanf("%d%d", &n, &m);
    for(i = 1; i<=n; i++)
    {
        scanf("%d", &a[i]);
    }
    while(m--)
    {
        int l = 0;
        int r = 0;
        int c = 0;
        scanf("%d%d%d", &l, &r, &c);
        b[l]+=c;
        b[r+1]-=c;
    }
    for(i = 1; i<=n; i++)
    {
        c[i] = c[i-1] + b[i];
    }
    for(i = 1; i<=n; i++)
    {
        printf("%d ", a[i]+c[i]);
    }
    return 0;
}
